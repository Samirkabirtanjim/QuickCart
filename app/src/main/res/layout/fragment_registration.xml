<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegistrationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        >
        <TextView
            android:id="@+id/TopText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#52C6C6"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/name"
            android:layout_below="@+id/TopText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="#52C6C6"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_shape"
            android:hint="ex. Salam F Rahman"
            android:inputType="text"
            android:maxLines="2"
            android:paddingStart="10dp"
            android:singleLine="true" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/phone"
            android:layout_below="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="#52C6C6"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/phone_edittext"
            android:layout_marginTop="5dp"
            android:layout_below="@id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/box_shape"
            android:hint="ex. +8801234567890"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:maxLength="15"
            android:maxLines="1"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/email"
            android:layout_below="@+id/phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="#52C6C6"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/email_edittext"
            android:layout_marginTop="5dp"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/box_shape"
            android:hint="ex. Salman@gmail.com"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/pass"
            android:layout_below="@+id/email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="#52C6C6"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/pass_edittext"
            android:layout_marginTop="5dp"
            android:layout_below="@id/pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/box_shape"
            android:hint="ex. xxxxxxxxx"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:maxLength="8"
            android:maxLines="1"
            android:inputType="numberPassword"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/pass_edittext"
            >

            <CheckBox
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/checkbox"
                android:layout_below="@+id/pass_edittext"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/policy"
                android:layout_below="@+id/pass_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I understood the terms and policy."
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/confirm_button"
            android:layout_marginTop="460dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Registration"
            android:background="@drawable/button_shape"
            />
    </RelativeLayout>
</FrameLayout>